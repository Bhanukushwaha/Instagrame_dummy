<% resource = User.new %>
  <div id="sign_up_error" style="color: green;" ></div>
<%= form_for(resource, as: resource_name,remote: true, url: registration_path(resource_name)) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="w3-container" action="/action_page.php">
    <div class="w3-section">
      <label><b>First Name</b></label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "firstname", placeholder: "FirstName",type: "text", :required => true, class: "w3-input w3-border w3-margin-bottom"%>
      
      <label><b>Last Name</b></label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "lastname", placeholder: "Last Name",type: "text",:required => true , class: "w3-input w3-border w3-margin-bottom"%>

      <label><b>Image</b></label>
      <%= f.file_field :image, :required => true  %><br>

      <label><b>Email</b></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",type: "text",:required => true , class: "w3-input w3-border w3-margin-bottom" %>
                          
      <label><b>Password</b></label> 
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", type: "password", placeholder: "Enter Password",:required => true , class: "w3-input w3-border" %>

      <label><b>password_confirmation</b></label>
       <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w3-input w3-border",:required => true , placeholder: "Enter Password" %>         
      <%= f.submit "Sign up" , class: "w3-button w3-block w3-green w3-section w3-padding"%>
    </div>
  </div>
<% end %>
<div class="w3-container w3-light-grey w3-padding">
  <button class="w3-button w3-right w3-red w3-border"
  onclick="document.getElementById('id01').style.display='none'">Close</button>
</div>
