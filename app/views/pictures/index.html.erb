<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table id="">
  <thead>
    <tr class="">
      <th>Post</th>
      <th>Image</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.post_id %></td>
        <td><%= picture.image %></td>
        <!-- <td><%#= link_to 'Show', picture %></td> -->
        <td><%= link_to 'show', picture, remote: true %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture),:remote => true %></td>        
        <td><%= button_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Picture', new_picture_path ,class: "w3-button w3-green"%>

